<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Course.CourseFragment"
    android:background="@color/white">

    <!-- 콘텐츠 영역 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/coursetoppanel_cl"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/coursetopname_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hometopname_iv"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/coursenotification_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/homenotification_btn"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/courseRecommend_tv"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:text="코스 추천"
        android:fontFamily="@font/applesdgothicneo_l"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/coursetoppanel_cl"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp" />
    
    <View
        android:id="@+id/courseDivline"
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:background="@color/gray300"
        app:layout_constraintStart_toEndOf="@id/courseRecommend_tv"
        app:layout_constraintTop_toTopOf="@id/courseRecommend_tv"
        app:layout_constraintBottom_toBottomOf="@id/courseRecommend_tv"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/courseMycourse_tv"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:text="내 코스"
        android:fontFamily="@font/applesdgothicneo_l"
        android:textSize="16sp"
        android:textColor="@color/gray300"
        app:layout_constraintStart_toEndOf="@id/courseDivline"
        app:layout_constraintTop_toTopOf="@id/courseRecommend_tv"
        android:layout_marginLeft="8dp"
        android:gravity="center"/>

    <FrameLayout
        android:id="@+id/course_child_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/courseRecommend_tv"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
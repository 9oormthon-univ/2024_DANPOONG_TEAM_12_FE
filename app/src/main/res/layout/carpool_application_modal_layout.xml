<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/modal_background"
    android:padding="30dp">

    <ImageView
        android:id="@+id/scroll_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/modal_scroll_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray200"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/scroll_icon_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/application_list_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="지원한 내역"
        android:textSize="20sp"
        android:fontFamily="@font/applesdgothicneo_l"
        android:paddingVertical="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/divider6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider1"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray200"
        app:layout_constraintTop_toBottomOf="@id/application_list_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/write_list_tv"/>

    <TextView
        android:id="@+id/write_list_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="작성한 내역"
        android:textSize="20sp"
        android:fontFamily="@font/applesdgothicneo_l"
        android:paddingVertical="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider2"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray200"
        app:layout_constraintTop_toBottomOf="@id/write_list_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
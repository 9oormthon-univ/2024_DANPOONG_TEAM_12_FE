<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CarPool.CarPoolApply.CarPoolPostFragment">

    <LinearLayout
        android:id="@+id/title_LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/carpool_post_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배봉산까지 같이 가요!"
            android:textSize="20sp"
            android:fontFamily="@font/applesdgothicneo_eb"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임 | 사는동네"
            android:textColor="@color/gray300"
            android:textSize="15sp"
            android:fontFamily="@font/applesdgothicneo_m"
            android:layout_marginVertical="6dp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/report_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="20dp"
        app:layout_goneMarginEnd="9dp"
        android:background="@drawable/report_icon"
        app:layout_constraintEnd_toStartOf="@id/heart_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/report_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="38dp"
        app:layout_constraintTop_toBottomOf="@id/report_btn"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/heart_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="20dp"
        android:background="@drawable/like_unclick_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter"
        android:layout_marginEnd="8dp"/>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray300"
        app:layout_constraintTop_toBottomOf="@id/title_LL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/apply_inform_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/divider4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/carpool_post_destination_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목적지: 서울 동대문구 휘경2동"
            android:textSize="15sp"
            android:textColor="@color/gray300"
            android:fontFamily="@font/applesdgothicneo_m"/>
        <TextView
            android:id="@+id/carpool_post_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜: 2024.11.23"
            android:textSize="15sp"
            android:textColor="@color/gray300"
            android:fontFamily="@font/applesdgothicneo_m"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/carpool_post_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간: 오전 9시 ~ 오후 3시"
            android:textSize="15sp"
            android:textColor="@color/gray300"
            android:fontFamily="@font/applesdgothicneo_m"
            android:layout_marginTop="3dp"/>

    </LinearLayout>

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray300"
        app:layout_constraintTop_toBottomOf="@id/apply_inform_LL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider5"
        android:paddingVertical="24dp"
        android:paddingHorizontal="15dp">
        <TextView
            android:id="@+id/apply_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apply_content"
            android:textSize="17sp"
            android:fontFamily="@font/applesdgothicneo_m"/>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/apply_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/next_button"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="30dp"
        android:text="지원하기"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="@font/applesdgothicneo_b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
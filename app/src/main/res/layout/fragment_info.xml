<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".information.InfoFragment"
    android:background="@color/white">

    <ImageView
        android:id="@+id/informationLogo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/information_logo_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="74dp"
        android:layout_marginLeft="24dp" />


    <ImageView
        android:id="@+id/informationTitle_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/information_title_iv"
        app:layout_constraintTop_toTopOf="@id/informationLogo_iv"
        app:layout_constraintStart_toEndOf="@id/informationLogo_iv"
        app:layout_constraintBottom_toBottomOf="@id/informationLogo_iv"
        android:layout_marginLeft="9dp" />
    <ImageView
        android:id="@+id/informationNotification_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/information_notification_iv"
        app:layout_constraintTop_toTopOf="@id/informationLogo_iv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="24dp"/>

    <ImageView
        android:id="@+id/informationInputbox_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/information_inputbox_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/informationLogo_iv"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="24dp"/>
    
    <EditText
        android:id="@+id/informationInputbox_et"
        android:layout_width="285dp"
        android:layout_height="20dp"
        android:hint="목적지를 입력하세요."
        android:background="@null"
        android:textSize="16sp"
        android:fontFamily="@font/applesdgothicneo_l"
        app:layout_constraintTop_toTopOf="@id/informationInputbox_iv"
        app:layout_constraintBottom_toBottomOf="@id/informationInputbox_iv"
        app:layout_constraintStart_toStartOf="@id/informationInputbox_iv"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리 지역 축제 정보"
        android:textSize="14sp"
        android:fontFamily="@font/applesdgothicneo_l"
        app:layout_constraintTop_toBottomOf="@id/informationInputbox_iv"
        app:layout_constraintStart_toStartOf="@id/informationInputbox_iv"
        android:layout_marginTop="31dp"/>
    
    <View
        android:layout_width="364dp"
        android:layout_height="1dp"
        android:background="#ADADAF"
        app:layout_constraintTop_toBottomOf="@id/informationInputbox_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/informationMain1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쌀쌀할 땐 실내로!"
        android:fontFamily="@font/applesdgothicneo_eb"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/informationInputbox_iv"
        app:layout_constraintTop_toBottomOf="@id/informationInputbox_iv"
        android:layout_marginTop="84dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/informationMain1_rv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/informationMain1_tv"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/informationMain2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이와 함께하는 문화체험"
        android:fontFamily="@font/applesdgothicneo_eb"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/informationMain1_rv"
        app:layout_constraintStart_toStartOf="@id/informationMain1_tv"
        android:layout_marginTop="32dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/informationMain2_rv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/informationMain2_tv"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>
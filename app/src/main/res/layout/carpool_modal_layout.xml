<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="30dp"
    android:paddingTop="30dp"
    android:paddingBottom="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/scroll_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/modal_scroll_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/no_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="출발지/목적지 없음"
        android:textSize="14sp"
        android:fontFamily="@font/applesdgothicneo_eb"
        android:background="@drawable/introduce_button"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/scroll_icon_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추천 검색어"
        android:textSize="20sp"
        android:fontFamily="@font/applesdgothicneo_eb"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_btn"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recommend_search_rv"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/recommend_location_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_tv"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray200"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/recommend_search_rv"/>

    <com.kakao.vectormap.MapView
        android:id="@+id/map_view"
        android:layout_width="360dp"
        android:layout_height="260dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp"
    android:background="@drawable/modal_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/scroll_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/modal_scroll_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/cancel_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000님을 신고하고 차단합니다"
        android:textSize="15sp"
        android:fontFamily="@font/applesdgothicneo_eb"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll_icon_iv"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="25dp"
        app:layout_constraintTop_toBottomOf="@id/cancel_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back_btn"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@drawable/back_button"
            android:text="닫기"
            android:textColor="@color/gray200"
            android:textSize="15sp"
            android:fontFamily="@font/applesdgothicneo_b"
            android:layout_marginHorizontal="4dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_button"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@drawable/cancel_button"
            android:text="신고 / 차단"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:fontFamily="@font/applesdgothicneo_b"
            android:layout_marginHorizontal="4dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
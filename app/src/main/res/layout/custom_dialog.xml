<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/custom_dialog_ll"
        android:layout_width="365dp"
        android:layout_height="162dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="17dp"
        android:paddingVertical="27dp"
        android:background="@drawable/custom_dialog_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/post_up_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="글이 정상적으로 게시되었습니다\n작성한 글은 지원 내역에서 확인 가능합니다"
            android:textSize="15sp"
            android:fontFamily="@font/applesdgothicneo_l"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/post_check_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textSize="15sp"
            android:textColor="@color/blue"
            android:clickable="true"
            android:enabled="true"
            android:fontFamily="@font/applesdgothicneo_b"
            android:background="@drawable/cancel_button"
            android:layout_marginTop="23dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
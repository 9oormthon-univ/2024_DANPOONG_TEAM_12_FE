<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="30dp"
    android:paddingVertical="16dp"
    android:background="@drawable/modal_background">

    <ImageView
        android:id="@+id/scroll_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/modal_scroll_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신고 / 차단"
        android:textSize="15sp"
        android:fontFamily="@font/applesdgothicneo_eb"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@id/scroll_icon_iv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000님을 신고하고 차단합니다\n신고 사유를 선택해주세요"
        android:textSize="15sp"
        android:fontFamily="@font/applesdgothicneo_l"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cancel_button"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:paddingVertical="15dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/content_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 저격, 비방, 비난, 욕설, 분란 유도"
            android:textSize="14sp"
            android:textColor="@color/gray300"
            android:fontFamily="@font/applesdgothicneo_l"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="타인에게 수치심, 불쾌감, 혐오감을 일으키는 행위"
            android:textSize="14sp"
            android:textColor="@color/gray300"
            android:fontFamily="@font/applesdgothicneo_l"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사생활 침해, 명예 훼손, 개인정보 개시"
            android:textSize="14sp"
            android:textColor="@color/gray300"
            android:fontFamily="@font/applesdgothicneo_l"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반복적인 도배"
            android:textSize="14sp"
            android:textColor="@color/gray300"
            android:fontFamily="@font/applesdgothicneo_l"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/apply_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/next_button"
        android:layout_marginBottom="20dp"
        android:text="신고하고 차단하기"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="@font/applesdgothicneo_b"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@id/ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
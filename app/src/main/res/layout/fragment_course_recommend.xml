<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Course.CourseRecommendFragment"
    android:background="@color/white">

    <ImageView
        android:id="@+id/courseLocation_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/courselocation_box"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"/>

    <EditText
        android:id="@+id/courseLocation_et"
        android:layout_width="285dp"
        android:layout_height="20dp"
        android:hint="목적지를 입력하세요"
        android:textSize="16sp"
        android:fontFamily="@font/applesdgothicneo_l"
        app:layout_constraintTop_toTopOf="@id/courseLocation_box"
        app:layout_constraintBottom_toBottomOf="@id/courseLocation_box"
        app:layout_constraintStart_toStartOf="@id/courseLocation_box"
        android:background="@null"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/courseDate_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/coursedate_box"
        app:layout_constraintTop_toBottomOf="@id/courseLocation_box"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/courseDate_et"
        android:layout_width="138dp"
        android:layout_height="21dp"
        android:hint="11월 23일 - 11월 24일"
        android:textSize="16sp"
        android:fontFamily="@font/applesdgothicneo_m"
        android:background="@null"
        app:layout_constraintTop_toTopOf="@id/courseDate_box"
        app:layout_constraintBottom_toBottomOf="@id/courseDate_box"
        app:layout_constraintStart_toStartOf="@id/courseDate_box"
        android:layout_marginLeft="60dp"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/coursewhoaf_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/courseDate_box"
        app:layout_constraintTop_toBottomOf="@id/courseLocation_box"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/coursewhoaf_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coursewhoaf_box"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/courseleft_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/courseleft_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="18dp"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/courseright_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/courseright_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="18dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/coursewhoaf_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구"
            android:fontFamily="@font/applesdgothicneo_m"
            android:textSize="16sp"
            android:textColor="@color/gray300"
            app:layout_constraintStart_toEndOf="@id/courseleft_btn"
            app:layout_constraintEnd_toStartOf="@id/courseright_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/courseDate_box"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="31dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/coursesublist_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/homecurved_background"
            android:visibility="gone">

            <View
                android:layout_width="120dp"
                android:layout_height="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:background="@drawable/course_curved_background" />

            <TextView
                android:id="@+id/courseTitle1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지역별"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/applesdgothicneo_eb"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="60dp"/>

            <View
                android:layout_width="364dp"
                android:layout_height="1dp"
                android:background="@color/gray100"
                app:layout_constraintTop_toBottomOf="@id/courseTitle1_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="24dp"/>

            <!--            지역별 박스 모음-->

            <ImageView
                android:id="@+id/coursetitle1_box1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetitle1_box1"
                app:layout_constraintTop_toBottomOf="@id/courseTitle1_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="24dp"/>

            <ImageView
                android:id="@+id/courseTitle1_box2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetitle1_box2"
                app:layout_constraintTop_toTopOf="@id/coursetitle1_box1"
                app:layout_constraintStart_toEndOf="@id/coursetitle1_box1"
                android:layout_marginLeft="16dp" />

            <ImageView
                android:id="@+id/courseTitle1_box3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetitle1_box3"
                app:layout_constraintTop_toBottomOf="@id/coursetitle1_box1"
                app:layout_constraintStart_toStartOf="@id/coursetitle1_box1"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:id="@+id/courseTitle1_box4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetitle1_box4"
                app:layout_constraintTop_toTopOf="@id/courseTitle1_box3"
                app:layout_constraintStart_toStartOf="@id/courseTitle1_box2" />

            <ImageView
                android:id="@+id/courseTitle1_box5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetitle1_box5"
                app:layout_constraintStart_toStartOf="@id/coursetitle1_box1"
                app:layout_constraintTop_toBottomOf="@id/courseTitle1_box3"
                android:layout_marginTop="8dp" />

            <ImageView
                android:id="@+id/courseTitle1_box6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetitle1_box6"
                app:layout_constraintStart_toStartOf="@id/courseTitle1_box2"
                app:layout_constraintTop_toTopOf="@id/courseTitle1_box5" />

            <!--            지역별 이미지 모음-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetest1"
                app:layout_constraintTop_toTopOf="@id/coursetitle1_box1"
                app:layout_constraintStart_toStartOf="@id/coursetitle1_box1"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetest2"
                app:layout_constraintTop_toTopOf="@id/courseTitle1_box2"
                app:layout_constraintStart_toStartOf="@id/courseTitle1_box2"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetest3"
                app:layout_constraintTop_toTopOf="@id/courseTitle1_box3"
                app:layout_constraintStart_toStartOf="@id/courseTitle1_box3"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetest4"
                app:layout_constraintTop_toTopOf="@id/courseTitle1_box4"
                app:layout_constraintStart_toStartOf="@id/courseTitle1_box4"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetest5"
                app:layout_constraintTop_toTopOf="@id/courseTitle1_box5"
                app:layout_constraintStart_toStartOf="@id/courseTitle1_box5"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetest6"
                app:layout_constraintTop_toTopOf="@id/courseTitle1_box6"
                app:layout_constraintStart_toStartOf="@id/courseTitle1_box6"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp" />


            <TextView
                android:id="@+id/courseTitle2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리"
                android:textSize="20sp"
                android:fontFamily="@font/applesdgothicneo_eb"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/courseTitle1_box5"
                app:layout_constraintStart_toStartOf="@id/courseTitle1_tv"
                android:layout_marginTop="24dp"/>

            <View
                android:layout_width="364dp"
                android:layout_height="1dp"
                android:background="@color/gray100"
                app:layout_constraintTop_toBottomOf="@id/courseTitle2_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="24dp"/>

            <!--            카테고리 박스 모음-->

            <ImageView
                android:id="@+id/courseTitle2_box1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetitle2_box1"
                app:layout_constraintTop_toBottomOf="@id/courseTitle2_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="24dp" />

            <ImageView
                android:id="@+id/courseTitle2_box2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetitle2_box2"
                app:layout_constraintTop_toTopOf="@id/courseTitle2_box1"
                app:layout_constraintStart_toEndOf="@id/courseTitle2_box1"
                android:layout_marginLeft="16dp"/>

            <ImageView
                android:id="@+id/courseTitle2_box3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetitle2_box3"
                app:layout_constraintTop_toBottomOf="@id/courseTitle2_box1"
                app:layout_constraintStart_toStartOf="@id/courseTitle2_box1"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:id="@+id/courseTitle2_box4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetitle2_box4"
                app:layout_constraintTop_toTopOf="@id/courseTitle2_box3"
                app:layout_constraintStart_toStartOf="@id/courseTitle2_box2"/>

            <ImageView
                android:id="@+id/courseTitle2_box5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetitle2_box5"
                app:layout_constraintStart_toStartOf="@id/courseTitle2_box1"
                app:layout_constraintTop_toBottomOf="@id/courseTitle2_box3"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:id="@+id/courseTitle2_box6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetitle2_box6"
                app:layout_constraintTop_toTopOf="@id/courseTitle2_box5"
                app:layout_constraintStart_toStartOf="@id/courseTitle2_box2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetitle2_test1"
                app:layout_constraintTop_toTopOf="@id/courseTitle2_box1"
                app:layout_constraintStart_toStartOf="@id/courseTitle2_box1"
                app:layout_constraintBottom_toBottomOf="@id/courseTitle2_box1"
                android:layout_marginLeft="13dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetitle2_test2"
                app:layout_constraintTop_toTopOf="@id/courseTitle2_box2"
                app:layout_constraintStart_toStartOf="@id/courseTitle2_box2"
                app:layout_constraintBottom_toBottomOf="@id/courseTitle2_box2"
                android:layout_marginLeft="13dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetitle2_test3"
                app:layout_constraintTop_toTopOf="@id/courseTitle2_box3"
                app:layout_constraintStart_toStartOf="@id/courseTitle2_box3"
                app:layout_constraintBottom_toBottomOf="@id/courseTitle2_box3"
                android:layout_marginLeft="13dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetitle2_test4"
                app:layout_constraintTop_toTopOf="@id/courseTitle2_box4"
                app:layout_constraintStart_toStartOf="@id/courseTitle2_box4"
                app:layout_constraintBottom_toBottomOf="@id/courseTitle2_box4"
                android:layout_marginLeft="13dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coursetitle2_test5"
                app:layout_constraintTop_toTopOf="@id/courseTitle2_box5"
                app:layout_constraintStart_toStartOf="@id/courseTitle2_box5"
                app:layout_constraintBottom_toBottomOf="@id/courseTitle2_box5"
                android:layout_marginLeft="13dp" />

            <ImageView
                android:id="@+id/course_nextbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/course_nextbtn"
                app:layout_constraintTop_toBottomOf="@id/courseTitle2_box5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/course_nextbtn"
                app:layout_constraintStart_toStartOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
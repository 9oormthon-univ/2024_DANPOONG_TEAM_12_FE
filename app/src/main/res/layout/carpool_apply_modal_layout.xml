<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp"
    android:background="@drawable/modal_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/scroll_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/modal_scroll_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/self_introduce_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자기소개"
        android:textSize="20sp"
        android:fontFamily="@font/applesdgothicneo_eb"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll_icon_iv"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/carpool_apply_el"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.MediumComponent"
        app:errorTextColor="@color/gray300"
        app:errorIconDrawable="@null"
        app:boxStrokeErrorColor="@color/gray200"
        app:counterEnabled="true"
        app:counterMaxLength="800"
        app:hintEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/self_introduce_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="33dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/carpool_apply_et"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:fontFamily="@font/applesdgothicneo_r"
            android:hint="@string/introduce_ment"
            android:gravity="top"
            android:textSize="15sp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/apply_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/next_button"
        android:layout_marginBottom="20dp"
        android:text="지원하기"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="@font/applesdgothicneo_b"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/carpool_apply_el"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>